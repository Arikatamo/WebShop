@model IEnumerable<WebShop3.Models.ViewProducts.CategoriesItemViewModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @using (Ajax.BeginForm("DeleteCategory", new AjaxOptions { UpdateTargetId = "result" }))
            {
                <input type="submit" value="Delete" class="btn btn-default" name="@item.Id" id="@item.Id" />
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id } , new { onclick = "$(this).closest('form').submit()" } )*@
            }
        </td>
    </tr>
}

</table>
